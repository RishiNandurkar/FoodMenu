@model List<Menu.Models.Dish>

@{
    ViewData["Title"] = "MenuIndex";
}

<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-6 mb-4">
                <div class="text-center">
                    <h4>@item.Name</h4>
                </div>
                <div class="text-center">
                    <div style="width: 450px; height: 300px; margin:0 auto;">
                        <img src="@item.ImageUrl" class="img-fluid" style="max-width: 100%; max-height: 100%;" alt="@item.Name" />
                    </div>
                </div>
                <div class="text-center mt-2">
                    @item.Price.ToString("N2") Dollars
                </div>
                <div class="text-center mt-2">
                    <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id">View Dish</a>
                </div>
            </div>
        }
    </div>
</div>
